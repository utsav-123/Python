import matplotlib.pyplot as plt

x = ["python","c","c++","java"]
y = [85, 70, 60, 82]


plt.xlabel("NO.", fontsize = 15)
plt.ylabel("Language", fontsize = 15)
plt.title("Popularity", fontsize = 15)

c = ["r","b","m","g"]
plt.barh(x,y,  color = c, align = "center", edgecolor = "r", linewidth = 3, linestyle = ":", alpha = 0.7, label = "name")

plt.legend()
plt.show()
