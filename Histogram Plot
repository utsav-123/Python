import matplotlib.pyplot as plt
import numpy as np
import random

x = np.random.randint(10,60,(50))
print(x)
no = [13, 59, 41, 24, 19, 50, 25, 46, 28, 42, 52, 34, 44, 18, 35, 55, 38, 28, 27, 43, 41, 43, 38, 13,
 21, 58, 16, 19, 42, 57, 46, 49, 42, 55, 51, 37, 48, 16, 58, 59, 26, 11, 42, 53, 53, 40, 48, 42,
 46, 27]
